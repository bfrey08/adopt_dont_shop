<h1> <%= @application.name %> </h1>

<h3> <%= @application.address %> </h3>

<h3> Summary statement: <%= @application.description %> </h3>
<br>
<h4> <%= @application.status %> </h4>
<br>
<h1> Add a Pet to this Application </h1>
  <%= form_with url: "/applications/new/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
  <% end %>
<br>
<h2> <%= @pet.name if @pet != nil  %>  </h2>
