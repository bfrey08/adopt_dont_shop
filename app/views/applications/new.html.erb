<h1>New Application</h1>
<%= form_with url: "/applications/new", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

<br>
<br>
<br>
  <%= f.label :description %>
  <%= f.text_area :description, cols: 30, rows: 10  %>

  <%= f.submit %>
<% end %>
